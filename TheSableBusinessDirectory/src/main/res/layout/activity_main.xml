<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoDragView="@id/dragView"
    sothree:umanoOverlay="true"
    sothree:umanoPanelHeight="25dp"
    sothree:umanoParallaxOffset="100dp"
    sothree:umanoShadowHeight="4dp"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <!-- MAIN CONTENT -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/loggedInLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="3dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/userImageLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivUserImage"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:id="@+id/userProfileLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">

                        <ImageButton
                            android:id="@+id/btnSupport"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:background="@drawable/customborder"
                            android:scaleType="fitCenter"
                            app:srcCompat="@mipmap/support_foreground" />

                        <ImageButton
                            android:id="@+id/btnSettings"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:background="@drawable/customborder"
                            android:scaleType="fitXY"
                            app:srcCompat="@mipmap/settings_foreground" />

                        <ImageButton
                            android:id="@+id/btnFavorites"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:background="@drawable/customborder"
                            android:scaleType="fitXY"
                            app:srcCompat="@mipmap/favorites" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/userGreetingLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/userNameLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvHello"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hello"
                            android:textColor="#e9774f" />

                        <TextView
                            android:id="@+id/tvUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_marginEnd="1dp"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold"
                            tools:text="username" />

                        <TextView
                            android:id="@+id/tvWelcome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=","
                            android:textColor="#e9774f"
                            android:textSize="12sp"
                            tools:text="," />

                        <TextView
                            android:id="@+id/tvWpUserId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:text="userId"
                            tools:visibility="visible" />

                    </LinearLayout>

                    <TextSwitcher
                        android:id="@+id/textSwitcherFoo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvSwitcher"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Our location based directory showcases black owned businesses near you. Customer feedack insures high quality products and services. "
                            android:textColor="#e9774f"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvSwitcher2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/colorAccent"
                            android:textSize="12sp" />
                    </TextSwitcher>

                </LinearLayout>

                <ImageView
                    android:id="@+id/spokesperson"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:scaleType="centerCrop"
                    app:srcCompat="@mipmap/hello_foreground" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/mapLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <fragment
                    android:id="@+id/mapFragment"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/noListingsAnimationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/noListingsAnimationFLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/roundedcorner"
                        android:backgroundTint="#BFFFFFFF"
                        android:gravity="center_vertical">

                        <com.facebook.login.widget.LoginButton
                            android:id="@+id/login_button3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom|left"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="15dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:id="@+id/noListingsLayout"
                            android:layout_width="match_parent"
                            android:layout_height="225dp"
                            android:layout_gravity="start|center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/noListingsTextView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start|center_vertical"
                                    android:gravity="center_vertical"
                                    android:padding="3dp"
                                    android:text="Looks like there aren't any listings near you."
                                    android:textColor="@color/colorAccent2"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/noListingsTextView3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start|center_vertical"
                                    android:gravity="center_vertical"
                                    android:paddingStart="3dp"
                                    android:paddingEnd="3dp"
                                    android:text="Adding a listing is easy."
                                    android:textColor="@color/colorAccent2"
                                    android:textSize="18sp" />

                                <TextView
                                    android:id="@+id/noListingsTextView2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="start|center_vertical"
                                    android:gravity="center_vertical"
                                    android:paddingStart="3dp"
                                    android:paddingEnd="3dp"
                                    android:text="Tap the button below to use your Facebook account when at a black owned business to add that business to our directory."
                                    android:textColor="@color/colorAccent" />

                            </LinearLayout>

                            <ImageView
                                android:id="@+id/noListingsImageView"
                                android:layout_width="200dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical|end"
                                android:scaleType="fitCenter"
                                app:srcCompat="@mipmap/sorry_foreground" />
                        </LinearLayout>


                    </FrameLayout>
                    <!-- END NO LISTINGS ANIMATION -->
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <SearchView
                        android:id="@+id/search"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="false"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="3dp"
                        android:background="@color/white"
                        android:iconifiedByDefault="false"
                        android:padding="5dp"
                        android:queryBackground="@drawable/customborder"
                        android:queryHint="Search black owned businesses..."
                        android:theme="@style/AppSearchView"
                        android:visibility="visible">

                    </SearchView>

                    <ListView
                        android:id="@+id/listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/search"
                        android:background="#ffffff" />

                    <TextView
                        android:id="@+id/tvCategories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/category_radioButton_scroller"
                        android:layout_marginStart="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Categories"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent2"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <HorizontalScrollView
                        android:id="@+id/category_radioButton_scroller"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="false"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="30dp"
                        android:fillViewport="false"
                        android:scrollbars="none"
                        android:visibility="visible">

                        <RadioGroup
                            android:id="@+id/radio_group_list_selector"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/white"
                            android:orientation="horizontal">

                        </RadioGroup>
                    </HorizontalScrollView>

                    <Button
                        android:id="@+id/btnAdd"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/search"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="false"
                        android:layout_gravity="start"
                        android:layout_marginStart="3dp"
                        android:background="@drawable/buttonshape"
                        android:padding="5dp"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        android:text="add"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnShowListings"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_below="@id/search"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="end"
                        android:layout_marginEnd="3dp"
                        android:background="@drawable/buttonshape"
                        android:padding="5dp"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="5"
                        android:text="show all"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/tvQuerying" />

                    <TextView
                        android:id="@+id/tvQuerying"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="5dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent2"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:visibility="visible" />

                </RelativeLayout>

            </FrameLayout>

        </LinearLayout>

    </FrameLayout>

    <!-- SLIDING LAYOUT -->

    <LinearLayout
        android:id="@+id/dragView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMore"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/customborder"
            android:backgroundTint="@color/colorAccent2"
            android:gravity="center_horizontal"
            android:text="More"
            android:textAllCaps="true"
            android:textColor="@color/white" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false">

            <LinearLayout
                android:id="@+id/sliderLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/recentReviewsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_top_corners"
                    android:backgroundTint="@android:color/transparent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvRecentReviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        android:gravity="start|center_vertical"
                        android:paddingStart="3dp"
                        android:paddingEnd="3dp"
                        android:text="Recent Reviews"
                        android:textAllCaps="true"
                        android:textColor="#e9774f"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recentReviewsRecyclerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recentReviewsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white" />

                </LinearLayout>


                <!-- BEGIN NO LISTINGS ANIMATION -->


                <!-- BEGIN ABOUT US LISTINGS ANIMATION -->
                <LinearLayout
                    android:id="@+id/aboutUsAnimationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/aboutUsAnimationFLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/roundedcorner"
                        android:backgroundTint="@color/white"
                        android:gravity="center_vertical">

                        <com.facebook.login.widget.LoginButton
                            android:id="@+id/login_button2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="bottom|left"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="15dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:id="@+id/textSwitcherLayout"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_gravity="start|center_vertical"
                            android:orientation="vertical">

                            <TextSwitcher
                                android:id="@+id/textSwitcher"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center_vertical"
                                android:padding="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/textSwitcher2Layout"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="start|center_vertical"
                            android:orientation="vertical">

                            <TextSwitcher
                                android:id="@+id/textSwitcher2"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center_vertical"
                                android:padding="10dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/textSwitcher3Layout"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_gravity="start|center_vertical"
                            android:orientation="vertical">

                            <TextSwitcher
                                android:id="@+id/textSwitcher3"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_gravity="center_vertical"
                                android:padding="10dp" />

                        </LinearLayout>

                        <ImageSwitcher

                            android:id="@+id/imageSwitcher2"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center_vertical|end">

                            <ImageView
                                android:id="@+id/imageView2-1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:scaleType="fitCenter"
                                app:srcCompat="@mipmap/smiling_peace_foreground" />

                            <ImageView
                                android:id="@+id/imageView2-2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:scaleType="fitCenter" />
                        </ImageSwitcher>

                        <ImageSwitcher

                            android:id="@+id/imageSwitcher"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center_vertical|end">

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:scaleType="fitCenter"
                                app:srcCompat="@mipmap/sorry_foreground" />

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:scaleType="fitCenter" />

                        </ImageSwitcher>

                        <ImageSwitcher

                            android:id="@+id/imageSwitcher3"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center_vertical|end">

                            <ImageView
                                android:id="@+id/imageView3-1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:scaleType="fitCenter"
                                app:srcCompat="@mipmap/smiling_peace_foreground" />

                            <ImageView
                                android:id="@+id/imageView3-2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:scaleType="fitCenter" />
                        </ImageSwitcher>


                    </FrameLayout>
                    <!-- END NO LISTINGS ANIMATION -->
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/featuredListings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvFeaturedListings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        android:gravity="start|center_vertical"
                        android:paddingStart="3dp"
                        android:paddingEnd="3dp"
                        android:text="Featured Listings"
                        android:textAllCaps="true"
                        android:textColor="#e9774f"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/featuredListingsRecyclerViewLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/featuredListingsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white">

                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nearByListingsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvNearbyListings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="start|center_vertical"
                        android:paddingStart="3dp"
                        android:paddingEnd="3dp"
                        android:text="Near by"
                        android:textAllCaps="true"
                        android:textColor="#e9774f"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/verticalRecyclerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/verticalRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:clipToPadding="false"
                        android:paddingBottom="5dp"
                        android:visibility="visible">

                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recentListingsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvRecentListings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:backgroundTint="@color/white"
                        android:gravity="start|center_vertical"
                        android:paddingStart="3dp"
                        android:paddingEnd="3dp"
                        android:text="New Listings"
                        android:textAllCaps="true"
                        android:textColor="#e9774f"
                        android:textSize="12sp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recentListingsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/white">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>

